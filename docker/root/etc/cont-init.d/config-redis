#!/command/with-contenv sh

CORES=$(cat /proc/cpuinfo | grep -c "cpu cores")

REDIS_CONFIG='/etc/redis.conf'

sed -i 's/^\(bind .*\)$/# \1/' $REDIS_CONFIG
sed -i 's/^\(daemonize .*\)$/# \1/' $REDIS_CONFIG
